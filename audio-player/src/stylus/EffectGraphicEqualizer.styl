@import "common/Color.styl"
@import "common/Size.styl"
@import "common/MixIn.styl"

.effect-graphic-equalizer {
  width size_full
  height size_full
  background-color color_gray_light

  &__gain {
    position relative
    width size_full
    height size_full

    &__step-line {
      position absolute
      width size_full
      border-top solid 1px color_gray
    }

    &__slider {
      position absolute
      top 110px
      width 200px
      background-color transparent

      cursor pointer
      transform rotate( 270deg )

      -webkit-appearance none

      &:focus {
        outline none
      }

      &::-webkit-slider-thumb {
        -webkit-appearance none
        margin-top -9px
        width 10px
        height 20px
        background-color color_purple_dark
      }

      &::-webkit-slider-runnable-track {
        margin-top 6px
        height 3px
        background-color color_gray_darkness
      }

    }

    &__frequecy {
      position absolute
      top 225px
      font-size 11px
      font-weight bold
    }
  }
}
